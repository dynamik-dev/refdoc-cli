{
  "name": "@dynamik-dev/refdocs",
  "version": "0.9.0",
  "type": "module",
  "description": "Local CLI tool that fetches, organizes, and catalogs markdown documentation for LLM-assisted development",
  "main": "dist/index.js",
  "bin": {
    "refdocs": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "bun build --compile src/index.ts --outfile refdocs",
    "build:npm": "rm -rf dist && tsc -p tsconfig.build.json",
    "prepack": "npm run build:npm"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dynamik-dev/refdoc-cli.git"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "tar-stream": "^3.1.7"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/tar-stream": "^3.1.4",
    "tsx": "^4.19.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
